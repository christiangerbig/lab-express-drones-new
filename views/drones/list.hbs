<div class="container">
	<h2 class="mt-5 mb-4">Available drones</h2>
	{{#each drones}}
		<div class="container mb-4">
			<div class="row">
				<div class="col-3">
					<ul class="list-group">
						<li class="list-group-item">{{this.name}}</li>
						<li class="list-group-item">{{this.propellers}}</li>
						<li class="list-group-item">{{this.maxSpeed}}</li>
					</ul>
				</div>
				<div class="col-1">
					<a href="/drones/{{this._id}}/edit" class="btn btn-sm btn-primary">Edit</a>
				</div>
				<div class="col-1">
					<form method="POST" action="/drones/{{this._id}}/delete">
						<button type="submit" class="btn btn-sm btn-primary">Delete</button>
					</form>
				</div>
			</div>
		</div>
	{{/each}}
</div>
